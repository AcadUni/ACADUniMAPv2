<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elshaikh.mano.acadunimap">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstPageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".FirstActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.elshaikh.mano.acadunimap.FirstActivity" />
        </activity>
        <activity
            android:name=".MainOptions"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".AcademicBookOptions" />
        <activity android:name=".AcademicBookSections" />
        <activity android:name=".SchooItemList" />
        <activity android:name=".RulesSelect" />
        <activity android:name=".Webing" />
        <activity android:name=".RulesItemList" />
        <activity android:name=".CoverBook" />
        <activity android:name=".Blank" />
        <activity android:name=".TimeTables" />
        <activity android:name=".SelectSchool" />
        <activity
            android:name=".FirstActivity"
            android:label="@string/title_activity_first_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>